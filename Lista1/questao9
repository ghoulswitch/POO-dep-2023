package poolistaum;
import java.util.Scanner;

public class Nove {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		double salfixo;
		double vendasef;
		double salvendedor;
		
		System.out.println("Insira o valor do salário:");
		salfixo = sc.nextByte();
		System.out.println("Insira o o total de vendas do mês:");
		vendasef = sc.nextByte();
		
		salvendedor = 15 * (salfixo + vendasef) / 100;
		
		System.out.printf("O salário final é:%.2f", salvendedor);
		
		sc.close();
	}

}
